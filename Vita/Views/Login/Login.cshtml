@{
    Layout = null;
}

<!-- Estilo del Login -->
<link rel="icon" type="image/png" href="~/Content/images/icons/favicon.ico" />
<link rel="stylesheet" type="text/css" href="~/vendor/bootstrap/css/bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="~/Content/fonts/font-awesome-4.7.0_login/css/font-awesome.min.css">
<link rel="stylesheet" type="text/css" href="~/Content/fonts/iconic_login/css/material-design-iconic-font.min.css">
<link rel="stylesheet" type="text/css" href="~/vendor/animate/animate.css">
<link rel="stylesheet" type="text/css" href="~/vendor/css-hamburgers/hamburgers.min.css">
<link rel="stylesheet" type="text/css" href="~/vendor/animsition/css/animsition.min.css">
<link rel="stylesheet" type="text/css" href="~/vendor/select2/select2.min.css">
<link rel="stylesheet" type="text/css" href="~/vendor/daterangepicker/daterangepicker.css">
<link rel="stylesheet" type="text/css" href="~/Content/css/util.css">
<link rel="stylesheet" type="text/css" href="~/Content/css/login.css">


<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100 p-l-55 p-r-55  p-b-54">
            <form class="login100-form validate-form" method="post" action="/Login/Login">

                <br />
                <a href="/Home"><img id="logo" src="../../Content/images/logo_.png" style="width: 130px; height: 180px;"></a>
                <br /> <br />
                <!--<span class="login100-form-title p-b-49">
        Login
    </span> -->

                <div class="wrap-input100 validate-input m-b-23" data-validate="Falta ingresar el usuario">
                    <span class="label-input100">Usuario</span>
                    <input class="input100" type="text" name="UsuarioName" placeholder="Escriba su usuario">
                    <span class="focus-input100" data-symbol="&#xf206;"></span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Falta ingresar la contraseña">
                    <span class="label-input100">Contraseña</span>
                    <input class="input100" type="password" name="Pass" placeholder="Escriba su contraseña">
                    <span class="focus-input100" data-symbol="&#xf190;"></span>
                </div>

                <div>
                    <div class="text-center" id="errorGeneral" name="errorGeneral"><br />  <h4 style="color:brown">@ViewBag.ErrorLogin</h4></div>
                </div>

                <div class="text-right p-t-8 p-b-31">
                    <a href="#">
                        ¿Olvido su contraseña?
                    </a>
                </div>

                <div class="container-login100-form-btn">
                    <div class="wrap-login100-form-btn">
                        <div class="login100-form-bgbtn"></div>
                        <button class="login100-form-btn" onclick="location.href='@Url.Action("PerfilUsuario", "Usuario")'">
                            Ingresar
                        </button>
                    </div>
                </div>

                <div class="txt1 text-center p-t-54 p-b-20">




                    <div class="flex-c-m">
                        <div id="fb-root"></div>



                        <a href="@Url.Action("Facebook", "Home")" id="loginLink" style="color:lightgreen">

                            <img src="../../Content/images/fblogin.png" />
                        </a>


                    </div>

                </div>

                <br />

                <div class="flex-col-c ">
                    <span class="txt1 p-b-17">¿Aún no está registrado?</span>
                    <div class="p-t-15">
                        <button type="button" class="btn btn-info" data-toggle="modal" data-target="#modalPush">Registrate</button>
                        <a href="/Home/Index" class="btn btn-info">Volver</a>
                    </div>
                </div>

                <!--Modal: modalPush-->
                <div class="modal fade" id="modalPush" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                     aria-hidden="true">
                    <div class="modal-dialog modal-notify modal-info" role="document">
                        <!--Content-->
                        <div class="modal-content text-center">
                            <!--Header-->
                            <div class="modal-header d-flex justify-content-center">
                                <p class="heading">¿Cómo quieres registrarte?</p>
                            </div>

                            <!--Body-->
                            <div class="modal-body">

                                <img id="logo" src="../../Content/images/iconopng.png" style="width:60px; height: 60px;">
                                </br>

                                <p>Bienvenido/a a VITA ¡Sólo estás a un paso!</p>

                            </div>

                            <!--Footer-->
                            <div class="p-t-15">
                                <a href="/Usuario/Registro" class="btn btn-info">Soy un Usuario</a>
                                <a href="/Usuario/RegistroEntidad?HayValidaciones=false" class="btn btn-info">Soy una Empresa</a>
                                <a href="#" type="button" class="btn btn-outline-info waves-effect" data-dismiss="modal">Cerrar</a>
                            </div>
                            <span class="txt1 p-b-17"></span>
                        </div>
                        <!--/.Content-->
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

<div id="dropDownSelect1"></div>

<!-- Scripts del Login-->
<script src="~/vendor/jquery/jquery-3.2.1.min.js"></script>
<script src="~/vendor/animsition/js/animsition.min.js"></script>
<script src="~/vendor/bootstrap/js/popper.js"></script>
<script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>
<script src="~/vendor/select2/select2.min.js"></script>
<script src="~/vendor/daterangepicker/moment.min.js"></script>
<script src="~/vendor/daterangepicker/daterangepicker.js"></script>
<script src="~/vendor/countdowntime/countdowntime.js"></script>
<script src="~/Content/js/login.js"></script>
<script src="~/Content/js/facebook.js"></script>