@*@model Vita.ViewModels.FormularioDinamicoViewModel*@
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <!-- Custom Stylesheet -->
    <link href="../../Content/plugins/bootstrap-material-datetimepicker/css/bootstrap-material-datetimepicker.css" rel="stylesheet">
    <!-- Page plugins css -->
    <link href="../../Content/plugins/clockpicker/dist/jquery-clockpicker.min.css" rel="stylesheet">
    <!-- Color picker plugins css -->
    <link href="../../Content/plugins/jquery-asColorPicker-master/css/asColorPicker.css" rel="stylesheet">
    <!-- Date picker plugins css -->
    <link href="../../Content/plugins/bootstrap-datepicker/bootstrap-datepicker.min.css" rel="stylesheet">
    <!-- Daterange picker plugins css -->
    <link href="../../Content/plugins/timepicker/bootstrap-timepicker.min.css" rel="stylesheet">
    <link href="../../Content/plugins/bootstrap-daterangepicker/daterangepicker.css" rel="stylesheet">


</head>

<body>
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">

                        <h3>Crear Formulario dinamico</h3>
                        <div class="form-validation">
                            <form class="form-valide" action="CreacionActividad" method="POST">

                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="TituloFormulario">
                                        Título del formulario<span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" id="val-username" name="TituloFormulario" placeholder="Formulario para completar la actividad..">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="DescripcionFormulario">
                                        Breve descripción para explicar al usuario <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <textarea class="form-control" id="val-suggestions" name="DescripcionFormulario" rows="5" placeholder="El siguiente formulario es de caracter obligatorio para poder....."></textarea>
                                    </div>
                                </div>

                                <div><h4>Agregar las consignas:</h4></div>



                                @*<div class="form-group row">
                                    <div class="col-lg-8 ml-auto">

                                        <button type="button" formaction="agregarTipoConsigna(TipoPregunta)" class="btn btn-primary">Agregar consigna</button>
                                    </div>
                                </div>*@


                                @*<div class="form-group row">
            <label class="col-lg-4 col-form-label" for="Titulo">
                Ingresar titulo de la consigna<span class="text-danger">*</span>
            </label>
            <div class="col-lg-6">
                <input type="text" class="form-control" id="val-username" name="TituloConsigna" placeholder="Alergias..">
            </div>
        </div>*@
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="Descripcion">
                                        Ingresar titulo de la consigna <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <textarea class="form-control" id="val-suggestions" name="Descripcion" rows="5" placeholder="Tienes problemas para correr o ejercitarse?...."></textarea>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-skill">
                                        Elegir tipo de respuesta que tiene que ingresar el cliente<span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <select class="form-control" id="filtroCategoria"
                                                data-live-search="true" title="Seleccione tipo de categoria de la actividad.." name="TipoPreguntaId">
                                            <option value=0>Elegir tipo de respuesta</option>
                                            @foreach (var item in ViewBag.ListaTipoPregunta as MultiSelectList)
                                            {
                                                <option value="@item.Value">@item.Text</option>
                                                @item.Value
                                            }
                                        </select>

                                    </div>
                                </div>
                                <div class="form-group row">
                                    <!--Aprobación-->
                                    <label class="col-lg-4 col-form-label" for="Compleja">
                                        ¿Está consigna va a ser obligatoria?
                                        Si es asi, los usuarios deberán completarla si o si.

                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <label><input type="radio" id="cbox1" name="Compleja" value="true"> Si</label><br>
                                        <label><input type="radio" id="cbox1" name="Compleja" value="false"> No</label><br>
                                    </div>
                                </div>


                                <div class="form-group row">
                                    <div class="col-lg-8 ml-auto">

                                        <button type="button" formaction="agregarTipoConsigna(TipoPregunta)" class="btn btn-primary">Agregarla</button>
                                    </div>
                                </div>
                            </form>
                            <div>Formulario como va quedando:</div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

