
@{
    ViewBag.Title = "ActividadesDelUsuarioInscripto";
    Layout = "~/Views/Shared/_LayoutPerfilUsuario.cshtml";
}

@model Usuario
<section class="container-fluid">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mis actividades</h4>

            <div class="table-responsive">
                <div class="header-left" style="margin-left:80%;">
                    <div class="input-group icons">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-transparent border-0 pr-2 pr-sm-3" id="basic-addon1"><i class="mdi mdi-magnify"></i></span>
                        </div>
                        <input type="search" class="form-control" placeholder="Buscar categoria" aria-label="Search Dashboard">
                        <div class="drop-down animated flipInX d-md-none">
                            <form action="#">
                                <input type="text" class="form-control" placeholder="Search">
                            </form>
                        </div>
                    </div>
                </div>
                <br><br><br><br><br>
                <table class="table header-border table-hover verticle-middle">
                    <thead>
                        <tr>
                            <th scope="col"></th>
                            <th scope="col">Titulo actividad</th>
                            <th scope="col">Zona</th>
                            <th scope="col">Edad</th>
                            <th scope="col">Estado de tu inscripcion</th>
                            <th scope="colgroup">Accion</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (Actividad i in ViewBag.ListaActividades)
                        {
                            var respuestasDeBd = ViewBag.ListaRespuestaFormu;
                       
                            if (i.Foto != null && i.Foto.Length > 0)
                            {
                                ViewBag.Url = i.Foto;
                            }
                            else
                            {
                                ViewBag.Url = "/Content/images/sin_foto.png";
                            }
                            <tr>
                                <td><a href="/Actividad/FichaActividad/?idActividad=@i.Id&inscribirse=false"><img src="@Url.Content(ViewBag.Url)" style="width: 190px; height: 120px;"> </a></td>
                                <td>@i.Titulo</td>
                                <td>@i.Localidad.Descripcion</td>
                                <td>@i.EdadMinima - @i.EdadMaxima</td>


                                @if (i.ConUsuarioPendiente == true)
                                {
                                    var estado = @i.UsuarioInscriptoActividad.Where(x => x.UsuarioId == Model.Id && x.ActividadId == i.Id).FirstOrDefault().Estado.Descripcion;
                                    <td style="text-align: center;">


                                        @{
                                            List<Respuesta> respuestas = new List<Respuesta>();
                                             List<Respuesta> re = new List<Respuesta>();
                                            if (respuestasDeBd.Count != 0)
                                            {
                                                foreach (var r in respuestasDeBd)
                                                {
                                                    respuestas.Add(r);
                                                }
                                                re= respuestas.Where(x => x.ActividadId == i.Id).ToList();
                                            }

                                            if (re.Count != 0)
                                            {
                                                //List<Respuesta> respuestas = new List<Respuesta>();
                                                //foreach (var r in respuestasDeBd)
                                                //{
                                                //    respuestas.AddRange(r);
                                                //}
                                                //var re= respuestas.Where(x => x.ActividadId == i.Id).ToList();
                                                if (estado == "Pendiente")
                                                {
                                                    <p>
                                                        Formulario ya completado
                                                    </p>


                                                    <span class="label gradient-2 rounded" style="font-size: 15px !important;">
                                                        @estado
                                                    </span>
                                                }
                                                else
                                                {
                                                    <p>
                                                    </p>

                                                    if (estado == "Aprobado")
                                                    {
                                                        <p>
                                                            Formulario ya completado
                                                        </p>
                                                        <span class="label gradient-3 rounded" style="font-size: 15px !important;">
                                                            @estado
                                                        </span>
                                                    }
                                                    else //rechazado
                                                    {
                                                        <p>
                                                            Formulario ya completado
                                                        </p>
                                                        <span class="label gradient-2 rounded" style="font-size: 15px !important;">
                                                            @estado
                                                        </span>
                                                    }

                                                }
                                            }
                                            else //no tiene formulario
                                            {
                                            
                                                if (estado == "Pendiente" && re.Count== 0)
                                                {
                                                    <a href="/Actividad/CompletarFormularioDinamicoUsuario?actividadId=@i.Id">
                                                        <span class="label gradient-2 rounded" style="font-size: 15px !important;">
                                                            Completar formulario
                                                        </span>
                                                    </a>

                                                    <p>
                                                    </p>


                                                    <span class="label gradient-2 rounded" style="font-size: 15px !important;">
                                                        @estado
                                                    </span>
                                                }
                                                else
                                                {
                                                    <p>
                                                    </p>

                                                    if (estado == "Aprobado")
                                                    {
                                                        <span class="label gradient-3 rounded" style="font-size: 15px !important;">
                                                            @estado
                                                        </span>
                                                    }
                                                    else //rechazado
                                                    {
                                                        <span class="label gradient-2 rounded" style="font-size: 15px !important;">
                                                            @estado
                                                        </span>
                                                    }

                                                }
                                            }
                                         
                                        }


                                    </td>

                                }

                                else
                                {
                                    var estado = @i.UsuarioInscriptoActividad.Where(x => x.UsuarioId == Model.Id && x.ActividadId == i.Id).FirstOrDefault().Estado.Descripcion;
                                    <td style="text-align: center;">

                                        @if (estado == "Aprobado")
                                        {
                                            <span class="label gradient-3 rounded" style="font-size: 15px !important;">
                                                @estado
                                            </span>
                                        }
                                        else //rechazado
                                        {
                                            <span class="label gradient-2 rounded" style="font-size: 15px !important;">
                                                @estado
                                            </span>
                                        }


                                    </td>

                                }



                                <td>
                                    <span><a href="#" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-pencil color-muted m-r-5"></i> </a></span>
                                </td>
                                <td>
                                    <span><a href="#" data-toggle="tooltip" data-placement="top" title="Close"><i class="fa fa-close color-danger"></i></a></span>
                                </td>

                            </tr>

                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

<script>

</script>