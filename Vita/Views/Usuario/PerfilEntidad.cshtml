@{
    ViewBag.Title = "PerfilEntidad";

    Layout = "~/Views/Shared/_LayoutPerfilEntidad.cshtml";
}
@model Usuario

<script>
    window.onload = function () {

        var options = {
            exportEnabled: true,
            animationEnabled: true,
            title: {
                text: "Popularidad"
            },
            data: [
                {
                    type: "splineArea",
                    dataPoints: [
                        { y: 10 },
                        { y: 6 },
                        { y: 14 },
                        { y: 12 },
                        { y: 19 },
                        { y: 14 },
                        { y: 05 },
                        { y: 10 },
                        { y: 22 }
                    ]
                }
            ]
        };
        $("#chartContainer").CanvasJSChart(options);

    }
</script>


<link href="~/Content/css/FotoPerfil.css" rel="stylesheet" media="all">

<!-- row -->
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8 col-xl-3">
            <div class="card">
                <div class="card-body">

                    <div class="row mb-5">

                        <div class="col-12 text-center">
                            <!--Foto de perfil-->
                            <div class="avatar-wrapper">
                                @if (Model.Foto != null && Model.Foto.Length > 0)
                                {
                                ViewBag.Url = "data:image;base64," + Convert.ToBase64String(Model.Foto);
                                }
                                else
                                {
                                ViewBag.Url = "";
                                }

                                <img class="profile-pic" src="@ViewBag.Url" width="150" height="150" alt="">
                                <input class="file-upload" type="file" accept="image/*" />
                            </div>
                            <!---->
                        </div>
                        <br><br>
                        <div class="col-12 text-center">
                            <button class="btn btn-danger px-5 upload-button">CAMBIAR FOTO</button>
                        </div>
                    </div>

                    <h4>Sobre nosotros</h4>
                    <p class="text-muted">@Model.SobreMi
                    </p>
                    <ul class="card-profile__info">
                        <li class="mb-1"><strong class="text-dark mr-4">Contacto</strong> <br /><span>@Model.Telefono</span></li>
                        <li><strong class="text-dark mr-4">Email</strong> <span>@Model.Email</span></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-lg-8 col-xl-9">
            <div class="card">
                <div class="card-body">
                    <div class="media-body">
                        <h5 class="mb-sm-0">@Model.UsuarioName<small class="text-muted ml-3">última modificación hace @Model.UpdatedAt día</small></h5>
                        <br><br />
                        <!--Table-->
                        <table id="tablePreview" class="table">
                            <!--Table head-->
                            <thead></thead>
                            <!--Table head-->
                            <!--Table body-->
                            <tbody>
                                <tr>
                                    <td hidden>@Model.Id</td>
                                </tr>
                                <tr>
                                    <th scope="row">Nombre</th>
                                    <td>@Model.Nombre</td>
                                </tr>
                                <tr>
                                    <th scope="row">Email</th>
                                    <td>@Model.Email</td>
                                </tr>
                                <tr>
                                    <th scope="row">Localidad</th>
                                    <td>@Model.Localidad.Descripcion</td><!--Puede tirarte el error al crear, pero si te fijas en la base, ya lo creo, no quitar, ya lo voy a ver-->
                                </tr>
                                <tr>
                                    <th scope="row">Teléfono</th>
                                    <td>@Model.Telefono</td>
                                </tr>
                                <tr>
                                    <th scope="row">Celular</th>
                                    <td>@Model.Celular</td>
                                </tr>
                                <tr>
                                    <th scope="row">Sitio Web Personal</th>
                                    <td>@Model.SitioWeb</td>
                                </tr>

                                <tr>
                                    <th scope="row">Sobre nosotros</th>
                                    <td>@Model.SobreMi</td>
                                </tr>
                                <tr>
                                    <th scope="row">Usuario</th>
                                    <td>@Model.UsuarioName</td>
                                </tr>
                                <tr>
                                    <th scope="row">Password</th>
                                    <td>@Model.Pass</td>
                                </tr>
                            </tbody>
                            <!--Table body-->
                        </table>
                        <!--Table-->
                        <button type="submit" class="btn btn-default">MODIFICAR</button>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="card">
                        <div id="chartContainer" style="height: 200px; width: 100%; "></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- #/ container -->

<script src="~/vendor/jquery/jquery.min.js"></script>
<script src="~/Content/js/FotoPerfil.js"></script>