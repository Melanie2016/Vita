
@{
    ViewBag.Title = "Perfil";
    Layout = "~/Views/Shared/_LayoutPerfilUsuario.cshtml";

}
@model Usuario
<link href="~/Content/css/FotoPerfil.css" rel="stylesheet" media="all">

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8 col-xl-3">
            <div class="card">
                <div class="card-body">
                    <div class="row mb-6">
                        <div class="col-12 text-center">

                            <div class="avatar-wrapper">
                                <img class="profile-pic" src="~/Content/images/person_2.jpg" width="100" height="100" alt="">
                                <input class="file-upload" type="file" accept="image/*" />
                            </div>
                            <!---->
                        </div>
                        <br><br>
                        <div class="col">
                            <div class="card card-profile text-center">
                                <span class="mb-1 text-primary"><i class="icon-people"></i></span>
                                <h3 class="mb-0">263</h3>
                                <p class="text-muted px-4">Amigos</p>
                            </div>
                        </div>
                        <div class="col">
                            <div class="card card-profile text-center">
                                <span class="mb-1 text-warning"><i class="icon-user-follow"></i></span>
                                <p class="text-muted">Agregar amigo</p>
                            </div>
                        </div>
                        <div class="col-12 text-center">
                            <button class="btn btn-success px-4 upload-button">CAMBIAR FOTO</button>
                        </div>
                    </div>@Model.SobreMi
                    <br><br>

                    <h4>Sobre mí</h4>
                    <p class="text-muted"></p>
                    <ul class="card-profile__info">
                        <li class="mb-1"><strong class="text-dark mr-4">Contacto</strong> <br><span>@Model.Celular</span></li>
                        <li><strong class="text-dark mr-4">Email</strong> <span>@Model.Email</span></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-lg- col-xl-9">
            <div class="card">
                <div class="card-body">
                    <div class="media media-reply">
                        <div class="media-body">
                            <div class="d-sm-flex justify-content-between mb-2">
                                <h5 class="mb-sm-0">@Model.UsuarioName<small class="text-muted ml-3">última modificación hace (@Model.UpdatedAt) días </small></h5>
                                <!--<div class="media-reply__link">
                                    <button class="btn btn-transparent p-0 mr-3"><i class="fa fa-thumbs-up"></i></button>
                                    <button class="btn btn-transparent p-0 mr-3"><i class="fa fa-thumbs-down"></i></button>
                                    <button class="btn btn-transparent text-dark font-weight-bold p-0 ml-2">Reply</button>
                                </div>-->
                            </div>

                            <div class="media mt-3">
                                <div class="media-body">
                                    <!--Table-->
                                    <table id="tablePreview" class="table">
                                        <!--Table head-->
                                        <thead> </thead>
                                        <!--Table head-->
                                        <!--Table body-->
                                        <tbody>
                                            <tr>
                                                <th scope="row">Nombre</th>
                                                <td>@Model.Nombre</td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Apellido</th>
                                                <td>@Model.Apellido</td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Fecha de Nacimiento</th>
                                                <td>@Model.FechaNacimiento</td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Sexo</th>
                                               
                                                <td>@Model.Sexo.Descripcion</td>
                                            </tr>
                                            <tr>
                                                <th scope="row">DNI</th>
                                                <td>@Model.Dni</td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Email</th>
                                                <td>@Model.Email</td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Localidad</th>
                                                <td>@Model.Localidad.Descripcion</td><!--Puede tirarte el error al crear, pero si te fijas en la base, ya lo creo, no quitar, ya lo voy a ver-->
                                            </tr>
                                            <tr>
                                                <th scope="row">Celular</th>
                                                <td>@Model.Celular</td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Intereses</th>
                                                <td>
                                                    @foreach (var item in ViewBag.ListacategoriasElegidas as MultiSelectList)
                                                    {
                                                        @item.Text <br>
                                                    }
                                                </td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Segmento</th>
                                                <td>
                                                    @foreach (var item in ViewBag.ListasegmentosElegidos as MultiSelectList)
                                                    {
                                                        @item.Text <br>
                                                    }
                                                </td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Sobre mí</th>
                                                <td>@Model.SobreMi</td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Usuario</th>
                                                <td>@Model.UsuarioName</td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Password</th>
                                                <td>@Model.Pass</td>
                                            </tr>
                                        </tbody>
                                        <!--Table body-->
                                    </table>
                                    <!--Table-->

                                    <button type="submit" class="btn btn-default">MODIFICAR</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- #/ container -->

<script src="~/vendor/jquery/jquery.min.js"></script>
<script src="~/Content/js/FotoPerfil.js"></script>