                            <div class="col-2">
                                <div class="input-group">
                                    <!--Email de la empresa-->
                                    <label class="label">Email</label>
                                    <input class="input--style-4" type="text" name="emailEntidad">
                                </div>
                            </div>
                        </div>
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
