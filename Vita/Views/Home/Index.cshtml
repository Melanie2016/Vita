@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="hero-wrap js-fullheight">
    <div class="overlay"></div>
    <div class="container-fluid px-0">
        <div class="row d-md-flex no-gutters slider-text align-items-end js-fullheight justify-content-end">
            <img class="one-third align-self-end order-md-last img-fluid" style="width: 540px;height: 570px;" src="~/Content/images/fondo2.png" alt="">

            <!-- BUSCADOR --> 
            <div class="one-forth d-flex align-items-center ftco-animate js-fullheight">
               <div class="text mt-5">
                
                    <p class="mb-4 mt-5 pt-5"> ¿Sabias que, <span class="number" data-number="200000">0</span> personas ya usan Vita?</p>
                    <h1 class="mb-5"  style="font-size: 54px; font-family:'Nunito Sans, Arial', sans-serif">La página web que te hace mover</h1>

                    <div class="ftco-search">
                        <div class="row">
                            <div class="col-md-12 nav-link-wrap">
                                <div class="nav nav-pills text-center" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                                    <a class="nav-link active mr-md-1" id="v-pills-1-tab" data-toggle="pill" href="#v-pills-1" role="tab" aria-controls="v-pills-1" aria-selected="true">Buscar actividad</a>

                                    <a class="nav-link" id="v-pills-2-tab" data-toggle="pill" href="#v-pills-2" role="tab" aria-controls="v-pills-2" aria-selected="false">Buscar por zona</a>

                                </div>
                            </div>
                            <div class="col-md-12 tab-wrap">

                                <div class="tab-content p-4" id="v-pills-tabContent">

                                    <div class="tab-pane fade show active" id="v-pills-1" role="tabpanel" aria-labelledby="v-pills-nextgen-tab">
                                        <form action="#" class="search-job">
                                            <div class="row no-gutters">
                                                <div class="col-md mr-md-4">
                                                    <div class="form-group">
                                                        <div class="form-field">
                                                            <div class="icon"><span class="glyphicon glyphicon-search"></span></div>
                                                            <input type="text" class="form-control" placeholder="Busqueda particular">
                                                        </div>
                                                    </div>
                                                </div>
                                                
                                                <div class="col-md-2">
                                                    <div class="form-group">
                                                        <div class="form-field">
                                                            <button type="submit" class="form-control btn btn-secondary">Buscar</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>

                                    <div class="tab-pane fade" id="v-pills-2" role="tabpanel" aria-labelledby="v-pills-performance-tab">
                                        <form action="#" class="search-job">
                                            <div class="row no-gutters">
                                                
                                                <div class="col-md mr-md-4">
                                                    <div class="form-group">
                                                        <div class="form-field">
                                                            <div class="icon"><span class="glyphicon glyphicon-search"></span></div>
                                                            <input type="text" class="form-control" placeholder="Ingrese una localidad">
                                                        </div>
                                                    </div>
                                                </div>
                                                
                                                <div class="col-md-2">
                                                    <div class="form-group">
                                                        <div class="form-field">
                                                            <button type="submit" class="form-control btn btn-secondary">Buscar</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>







